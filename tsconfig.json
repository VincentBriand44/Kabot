{
  "extends": "@sapphire/ts-config/decorators",
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "incremental": true,
    "lib": [
      "esnext"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "newLine": "lf",
    "noEmitHelpers": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "useDefineForClassFields": true
  },
  "exclude": [
    "src/**/*.js"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
